{
  "name": "frameworkless-mini-frontend-app",
  "version": "1.0.0",
  "description": "A minimal experimental MV* frontend app without libs and frameworks, just vanilla javascript",
  "scripts": {
    "dev": "webpack-dev-server --hot --inline --config webpack.development.config.babel.js",
    "build": "npm run lint && npm test && rimraf dist && webpack --progress -p --config webpack.production.config.babel.js",
    "lint": "eslint src",
    "test": "babel-node ./node_modules/karma/bin/karma start --single-run --no-auto-watch",
    "watch:test": "babel-node ./node_modules/karma/bin/karma start --browsers Chrome"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cstuncsik/frameworkless-mini-frontend-app.git"
  },
  "keywords": [],
  "author": "Csaba Tuncsik <csaba.tuncsik@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cstuncsik/frameworkless-mini-frontend-app/issues"
  },
  "homepage": "https://github.com/cstuncsik/frameworkless-mini-frontend-app#readme",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-preset-es2015": "^6.16.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.7.1",
    "eslint-import-resolver-node": "^0.2.3",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^2.0.0",
    "html-webpack-plugin": "^2.22.0",
    "istanbul-instrumenter-loader": "^1.0.0",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "^1.8.0",
    "node-sass": "^3.10.1",
    "phantomjs-polyfill": "0.0.2",
    "phantomjs-prebuilt": "^2.1.13",
    "postcss-loader": "^0.13.0",
    "reload-html-webpack-plugin": "^0.1.2",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "sinon": "^1.17.6",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.1"
  }
}
